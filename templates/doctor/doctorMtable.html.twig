
{% extends 'doctor/Dhome.html.twig' %}

{% block body %}
    <h1 class="text-info text-center">Recepten Lijst</h1>

    {% for message in app.flashes('success') %}

        <dib class="alert alert-success">
            {{ message }}
        </dib>


    {% endfor %}


    {% for message in app.flashes('danger') %}
        <dis class="alert alert-danger">
            {{ message }}
        </dis>


    {% endfor %}
    <br />
    <div class="container">
    <table class="table table-bordered">

        <thead class="text-center">
        <tr>
            <td class="thead">medicijn</td>
            <td class="thead">datum</td>
            <td class="thead">periode</td>
            <td class="thead">verzekerd</td>
            <td class="thead">patient</td>
            <td class="thead">Wijzigen</td>
            <td class="thead">Verwijderen</td>
        </tr>
        </thead>
        <tbody>
        {% for recept in recepten %}
            <tr class="text-center tr2">
                <td>
                    {{ recept.medicijn.naam }}
                </td>

                <td>
                    {{ recept.datum|date("d-m-Y") }}
                </td>

                <td>
                    {{ recept.periode }}
                </td>

                <td>
                    {% if recept.medicijn.verzekerd == true %}
                        verzekerd
                    {% else %}
                        niet verzekerd
                    {% endif %}
                </td>

                <td>
                    {{ recept.patient.naam }}
                </td>

                <td title="bewerk de gegevens van deze medicijn">
                    <a href="{{ path('updateDM',{'id':recept.id}) }}"><span class="far fa-pen text-info " style="font-size: 50px" ></span></a>
                </td>

                <td title="bewerk de gegevens van deze medicijn">
                    <a href="{{ path('deletDM', {'id':recept.id}) }}"><span class="far fa-trash-alt text-danger " style="font-size: 50px"></span></a>
                </td>

            </tr>
        {% endfor %}

        </tbody>

    </table>
        <a href="{{ path("creatDM") }}"  ><button class="btn btn-outline-warning  "><span class="far fa-plus text-warning " style="font-size: 50px"></span></button></a>
    </div>
{% endblock %}