
{% extends 'doctor/Dhome.html.twig' %}

{% block body %}
    <h1 class="text-info text-center">Recepten Lijst</h1>

    <br />
    <div class="container">
    <table class="table table-bordered">

        <thead class="text-center">
        <tr>
            <td class="thead">patient</td>
            <td class="thead">medicijn</td>
            <td class="thead">datum</td>
            <td class="thead">periode</td>
            <td class="thead">verzekerd</td>
        </tr>
        </thead>
        <tbody>
        {% for recept in recepten %}
            <tr class="text-center tr2">

                <td>
                    {{ recept.patient.naam }}
                </td>

                <td>
                    {{ recept.medicijn.naam }}
                </td>

                <td>
                    {{ recept.datum|date("d-m-Y") }}
                </td>

                <td>
                    {{ recept.periode }}
                </td>

                <td>
                    {% if recept.medicijn.verzekerd == true %}
                        verzekerd
                    {% else %}
                        niet verzekerd
                    {% endif %}
                </td>



            </tr>
        {% endfor %}

        </tbody>

    </table>
    </div>
{% endblock %}